@model IEnumerable<EloDataModel.Player>

@{
    ViewBag.Title = "Roster";
}

<h2>Roster</h2>

<p>
    @Html.ActionLink("Register New Player", "Create")
</p>
<table>
    <tr>
        <th>
            Registered Players
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PlayerID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PlayerID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PlayerID })
        </td>
    </tr>
}

</table>
